@model PriceComparisonMVC.Models.Response.LoginResponseModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/css/logo-style.css")">
</head>
<body>
    <div class="main-container">
        <div class="text-center mb-4">
            <h1 class="text-primary">LOGO</h1>
        </div>

        <div class="button-block">
            @* <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary">Увійти</a> *@
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">На головну</a>
            <a href="@Url.Action("Register", "Account")" class="btn btn-primary">Зареєстуватись</a>
        </div>

        <form method="post" asp-action="Login" asp-controller="Account">

            <!-- Вивід помилки -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <p>Невірний логін чи пароль</p>
                </div>
            }

            <div class="mb-3">
                <label for="username" class="form-label">Логін</label>
                <input asp-for="Username" class="form-control" id="username" placeholder="Логін" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Пароль</label>
                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Пароль" required>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe">
                <label class="form-check-label" for="rememberMe">Запам'ятати мене</label>
            </div>

            <div class="mb-4 text-center">
                <button type="submit" class="btn btn-primary">Увійти</button>
            </div>
        </form>

        <div class="text-center">
            <p class="text-muted">Продовжити через</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="#" class="text-decoration-none text-secondary">Google</a>
                <a href="#" class="text-decoration-none text-secondary">Apple</a>
                <a href="#" class="text-decoration-none text-secondary">Facebook</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
